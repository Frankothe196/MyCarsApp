<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC300"
    tools:context=".MyCarsProfile">

        <ProgressBar
            android:id="@+id/progresslistcars"
            android:layout_width="114dp"
            android:layout_height="101dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:indeterminateTint="#3BAAC9"
            android:visibility="gone" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarcarsmenu"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/backgroundorangenav"
            app:popupTheme="@style/AppTheme.PopupOverlay" />


        <ListView
            android:id="@+id/list_cars"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbarcarsmenu">


        </ListView>



</RelativeLayout>

