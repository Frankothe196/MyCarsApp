<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home"
    tools:context=".LoginActivity"
    android:layout_gravity="center_horizontal">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="150dp"
                android:layout_height="109dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:srcCompat="@mipmap/ic_launcher" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/background_4"
                android:orientation="vertical"
                android:padding="4dp"
                android:paddingBottom="5dp">

                <EditText
                    android:id="@+id/signFname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/iconuser"
                    android:drawableLeft="@drawable/iconuser"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:hint="First Name"
                    android:inputType="text"
                    android:padding="4dp"
                    android:paddingBottom="5dp"
                    android:textColor="#797878" />
                <EditText
                    android:id="@+id/signLname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/iconuser"
                    android:drawableLeft="@drawable/iconuser"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:hint="Second Name"
                    android:inputType="text"
                    android:padding="4dp"
                    android:paddingBottom="5dp"
                    android:textColor="#797878" />


                <EditText
                    android:id="@+id/signEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/iconemail"
                    android:drawableLeft="@drawable/iconemail"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:padding="4dp"
                    android:paddingBottom="5dp"
                    android:textColor="#797878" />


                <EditText
                    android:id="@+id/signPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/iconpassword"
                    android:drawableLeft="@drawable/iconpassword"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:hint="New Password"
                    android:inputType="textPassword"
                    android:padding="4dp"
                    android:paddingBottom="5dp"
                    android:textColor="#797878" />

                <EditText
                    android:id="@+id/testPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/iconpassword"
                    android:drawableLeft="@drawable/iconpassword"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:hint="Confirm new password"
                    android:inputType="textPassword"
                    android:padding="4dp"
                    android:paddingBottom="5dp"
                    android:textColor="#797878" />

            </LinearLayout>

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/backgroundbuttonblue"
                android:padding="4dp"
                android:paddingBottom="5dp"
                android:text="Submit"
                android:textColor="#fff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="5dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Already have an account?"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnLoginScreen"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:background="@drawable/backgroundbuttonorange"
                android:paddingBottom="4dp"
                android:text="Login"
                android:textColor="#ffffff" />



        </LinearLayout>


    <ProgressBar
        android:id="@+id/progressSign"
        android:layout_width="114dp"
        android:layout_height="101dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminateTint="#3BAAC9"/>
        android:visibility="gone" />
</RelativeLayout>